<%- title t "views.application_layout.locations" %>
<div class="col-xs-12">

  <div class="page-header">
    <h1><%= t "views.application_layout.locations" %> <small><%= t("views.epp.Listing of all %{model}", :model => t("views.locations.locations")) %></small></h1>
  </div>


  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
              <th><%= t("views.locations.state_id") %></th>
              <th><%= t("views.locations.name") %></th>
              <th class="hidden-print"></th>
        </tr>
      </thead>

      <tbody>
        <% @locations.each do |location| %>
          <tr>
    
            <td><%= link_to location.state.name, location.state if location.state_id %></td>


            <td><%= location.name %></td>
                <td class="hidden-print actions">
              <div class="btn-group">
                <%= link_to t('views.epp.links.show'), location , :class => 'btn btn-xs btn-default' %>
                <button type="button" class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown">
                  <span class="caret"></span>
                  <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to t('views.epp.links.edit'), edit_location_path(location) %></li>
                  <li><%= link_to t('views.epp.links.destroy'), location, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to t('views.epp.links.new %{model}', :model => t("views.locations.location")), new_location_path, :class => 'btn btn-primary btn-lg hidden-print' %>
</div>