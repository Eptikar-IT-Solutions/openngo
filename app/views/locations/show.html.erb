<%- title "#{@location.state_id}" %>
<div class="col-lg-12 show">
	<div class="page-header">
		<h1><%= @location.state_id %></h1>
		<a title="Edit" href="<%= edit_location_path(@location) %>"><span class="glyphicon glyphicon-pencil"></span></a>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.locations.state_id") %></strong></div>

		<div class="col-sm-10"><%= link_to @location.state.name, @location.state if @location.state_id %></div>
		</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.locations.name") %></strong></div>


		<div class="col-sm-10"><%= @location.try(:name) || 'N/A' %></div>
	</div>
</div>