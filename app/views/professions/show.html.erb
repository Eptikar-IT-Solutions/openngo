<%- title "#{@profession.name}" %>
<div class="col-lg-12 show">
	<div class="page-header">
		<h1><%= @profession.name %></h1>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.professions.name") %></strong></div>


		<div class="col-sm-10"><%= @profession.try(:name) || 'N/A' %></div>
	</div>


	<div class="buttons">
		<%= link_to t('views.epp.links.edit'), edit_profession_path(@profession), :class => 'btn btn-warning' %>
		<%= link_to t('views.epp.links.back'), professions_path, :class => 'btn btn-default' %>
	</div>
</div>