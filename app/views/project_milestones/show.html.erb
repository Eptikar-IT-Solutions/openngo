<%- title "#{@project_milestone.name}" %>
<div class="col-lg-12 show">
	<div class="page-header">
		<h1><%= @project_milestone.name %></h1>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.project_milestones.name") %></strong></div>


		<div class="col-sm-10"><%= @project_milestone.try(:name) || 'N/A' %></div>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.project_milestones.description") %></strong></div>


		<div class="col-sm-10"><%= @project_milestone.try(:description) || 'N/A' %></div>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.project_milestones.expences") %></strong></div>


		<div class="col-sm-10"><%= @project_milestone.try(:expences) || 'N/A' %></div>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.project_milestones.project_id") %></strong></div>

		<div class="col-sm-10"><%= link_to @project_milestone.project.name, @project_milestone.project if @project_milestone.project_id %></div>
		</div>


	<div class="buttons">
		<%= link_to t('views.epp.links.edit'), edit_project_milestone_path(@project_milestone), :class => 'btn btn-warning' %>
		<%= link_to t('views.epp.links.back'), project_milestones_path, :class => 'btn btn-default' %>
	</div>
</div>