<%- title "#{@activity_member.activity_id}" %>
<div class="col-lg-12 show">
	<div class="page-header">
		<h1><%= @activity_member.activity_id %></h1>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.activity_members.activity_id") %></strong></div>

		<div class="col-sm-10"><%= link_to @activity_member.activity.name, @activity_member.activity if @activity_member.activity_id %></div>
		</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.activity_members.member_id") %></strong></div>

		<div class="col-sm-10"><%= link_to @activity_member.member.name, @activity_member.member if @activity_member.member_id %></div>
		</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.activity_members.role_id") %></strong></div>

		<div class="col-sm-10"><%= link_to @activity_member.role.name, @activity_member.role if @activity_member.role_id %></div>
		</div>


	<div class="buttons">
		<%= link_to t('views.epp.links.edit'), edit_activity_member_path(@activity_member), :class => 'btn btn-warning' %>
		<%= link_to t('views.epp.links.back'), activity_members_path, :class => 'btn btn-default' %>
	</div>
</div>