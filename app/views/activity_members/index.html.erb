<%- title t "views.application_layout.activity_members" %>
<div class="col-xs-12">

  <div class="page-header">
    <h1><%= t "views.application_layout.activity_members" %> <small><%= t("views.epp.Listing of all %{model}", :model => t("views.activity_members.activity_members")) %></small></h1>
  </div>


  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
              <th><%= t("views.activity_members.activity_id") %></th>
              <th><%= t("views.activity_members.member_id") %></th>
              <th><%= t("views.activity_members.role_id") %></th>
              <th class="hidden-print"></th>
        </tr>
      </thead>

      <tbody>
        <% @activity_members.each do |activity_member| %>
          <tr>
    
            <td><%= link_to activity_member.activity.name, activity_member.activity if activity_member.activity_id %></td>

            <td><%= link_to activity_member.member.name, activity_member.member if activity_member.member_id %></td>

            <td><%= link_to activity_member.role.name, activity_member.role if activity_member.role_id %></td>
            <td class="hidden-print actions">
              <div class="btn-group">
                <%= link_to t('views.epp.links.show'), activity_member , :class => 'btn btn-xs btn-default' %>
                <button type="button" class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown">
                  <span class="caret"></span>
                  <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to t('views.epp.links.edit'), edit_activity_member_path(activity_member) %></li>
                  <li><%= link_to t('views.epp.links.destroy'), activity_member, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to t('views.epp.links.new %{model}', :model => t("views.activity_members.activity_member")), new_activity_member_path, :class => 'btn btn-primary btn-lg hidden-print' %>
</div>