<%- title t "views.application_layout.projects" %>
<div class="col-xs-12">

  <div class="page-header">
    <h1><%= t "views.application_layout.projects" %> <small><%= t("views.epp.Listing of all %{model}", :model => t("views.projects.projects")) %></small></h1>
  </div>


  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
              <th><%= t("views.projects.name") %></th>
              <th><%= t("views.projects.budget") %></th>
              <th><%= t("views.projects.from") %></th>
              <th><%= t("views.projects.to") %></th>
              <th><%= t("views.projects.goal") %></th>
              <th><%= t("views.projects.description") %></th>
              <th class="hidden-print"></th>
        </tr>
      </thead>

      <tbody>
        <% @projects.each do |project| %>
          <tr>
    

            <td><%= project.name %></td>
    

            <td><%= project.budget %></td>
    

            <td><%= project.from %></td>
    

            <td><%= project.to %></td>
    

            <td><%= project.goal %></td>
    

            <td><%= project.description %></td>
                <td class="hidden-print actions">
              <div class="btn-group">
                <%= link_to t('views.epp.links.show'), project , :class => 'btn btn-xs btn-default' %>
                <button type="button" class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown">
                  <span class="caret"></span>
                  <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to t('views.epp.links.edit'), edit_project_path(project) %></li>
                  <li><%= link_to t('views.epp.links.destroy'), project, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to t('views.epp.links.new %{model}', :model => t("views.projects.project")), new_project_path, :class => 'btn btn-primary btn-lg hidden-print' %>
</div>