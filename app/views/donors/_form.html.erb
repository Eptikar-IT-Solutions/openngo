<%= form_for @donor, :html => {:class => 'form-horizontal'} do |f| %>
  <% if @donor.errors.any? %>
    <% @donor.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger"><%= msg %></div>
    <% end %>
  <% end %>
  



    <div class="form-group">
      <%= f.label :name, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :name, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :email, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :email, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :phone1, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :phone1, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :phone2, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :phone2, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :fax, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :fax, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :description, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_area :description, :class => 'form-control' %></div>
    </div>

  
  <div class="form-group">
    <label class="col-sm-2 control-label" for="attachment_file"></label>
    <div class="col-sm-10"><button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-floppy-disk"></span> <%= t('views.epp.links.save') %></button></div>
  </div>
      
<% end %>