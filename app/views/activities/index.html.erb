<%- title t "views.application_layout.activities" %>
<div class="col-xs-12">

  <div class="page-header">
    <h1><%= t "views.application_layout.activities" %> <small><%= t("views.epp.Listing of all %{model}", :model => t("views.activities.activities")) %></small></h1>
  </div>


  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
              <th><%= t("views.activities.name") %></th>
              <th><%= t("views.activities.project_id") %></th>
              <th><%= t("views.activities.branch_id") %></th>
              <th><%= t("views.activities.budget") %></th>
              <th><%= t("views.activities.description") %></th>
              <th><%= t("views.activities.from") %></th>
              <th><%= t("views.activities.to") %></th>
              <th><%= t("views.activities.repeated") %></th>
              <th class="hidden-print"></th>
        </tr>
      </thead>

      <tbody>
        <% @activities.each do |activity| %>
          <tr>
    

            <td><%= activity.name %></td>
    
            <td><%= link_to activity.project.name, activity.project if activity.project_id %></td>

            <td><%= link_to activity.branch.name, activity.branch if activity.branch_id %></td>


            <td><%= activity.budget %></td>
    

            <td><%= activity.description %></td>
    

            <td><%= activity.from %></td>
    

            <td><%= activity.to %></td>
    

            <td><%= activity.repeated %></td>
                <td class="hidden-print actions">
              <div class="btn-group">
                <%= link_to t('views.epp.links.show'), activity , :class => 'btn btn-xs btn-default' %>
                <button type="button" class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown">
                  <span class="caret"></span>
                  <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to t('views.epp.links.edit'), edit_activity_path(activity) %></li>
                  <li><%= link_to t('views.epp.links.destroy'), activity, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to t('views.epp.links.new %{model}', :model => t("views.activities.activity")), new_activity_path, :class => 'btn btn-primary btn-lg hidden-print' %>
</div>