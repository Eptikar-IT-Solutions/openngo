<%= form_for @activity, :html => {:class => 'form-horizontal'} do |f| %>
  <% if @activity.errors.any? %>
    <% @activity.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger"><%= msg %></div>
    <% end %>
  <% end %>
  



    <div class="form-group">
      <%= f.label :name, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :name, :class => 'form-control' %></div>
    </div>


      <div class="form-group">
        <%= f.label :project_id, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <div class="input-group">
            <%= f.select :project_id, Project.all.collect {|p| [ p.name, p.id ] }, {}, { :class => 'form-control' } %>
            <span class="input-group-btn">
            <%= link_to raw('<span class="glyphicon glyphicon-plus"></span>'), new_project_path, :class => 'btn btn-default', :target => '_blank' %>
            <%= link_to raw('<span class="glyphicon glyphicon-play"></span>'), projects_path, :class => 'btn btn-default goto' %>
            </span>
          </div>
        </div>
      </div>


      <div class="form-group">
        <%= f.label :branch_id, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <div class="input-group">
            <%= f.select :branch_id, Branch.all.collect {|p| [ p.name, p.id ] }, {}, { :class => 'form-control' } %>
            <span class="input-group-btn">
            <%= link_to raw('<span class="glyphicon glyphicon-plus"></span>'), new_branch_path, :class => 'btn btn-default', :target => '_blank' %>
            <%= link_to raw('<span class="glyphicon glyphicon-play"></span>'), branches_path, :class => 'btn btn-default goto' %>
            </span>
          </div>
        </div>
      </div>




    <div class="form-group">
      <%= f.label :budget, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :budget, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :description, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_area :description, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :from, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.datetime_select :from, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :to, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.datetime_select :to, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :repeated, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.number_field :repeated, :class => 'form-control' %></div>
    </div>

      
  <div class="form-group">
    <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-floppy-disk"></span> <%= t('views.epp.links.save') %></button>
    <%= link_to raw("<span class='glyphicon glyphicon-trash'></span> #{t('views.epp.links.save')}"), activities_path , :class => 'btn btn-default' %>
  </div>
<% end %>