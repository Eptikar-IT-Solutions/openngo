<%- title "#{@project_donor.project_id}" %>
<div class="col-lg-12 show">
	<div class="page-header">
		<h1><%= @project_donor.project_id %></h1>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.project_donors.project_id") %></strong></div>

		<div class="col-sm-10"><%= link_to @project_donor.project.name, @project_donor.project if @project_donor.project_id %></div>
		</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.project_donors.donor_id") %></strong></div>

		<div class="col-sm-10"><%= link_to @project_donor.donor.name, @project_donor.donor if @project_donor.donor_id %></div>
		</div>


	<div class="buttons">
		<%= link_to t('views.epp.links.edit'), edit_project_donor_path(@project_donor), :class => 'btn btn-warning' %>
		<%= link_to t('views.epp.links.back'), project_donors_path, :class => 'btn btn-default' %>
	</div>
</div>
