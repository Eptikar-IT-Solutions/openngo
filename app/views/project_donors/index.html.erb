<%- title t "views.application_layout.project_donors" %>
<div class="col-xs-12">

  <div class="page-header">
    <h1><%= t "views.application_layout.project_donors" %> <small><%= t("views.epp.Listing of all %{model}", :model => t("views.project_donors.project_donors")) %></small></h1>
  </div>


  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
              <th><%= t("views.project_donors.project_id") %></th>
              <th><%= t("views.project_donors.donor_id") %></th>
              <th class="hidden-print"></th>
        </tr>
      </thead>

      <tbody>
        <% @project_donors.each do |project_donor| %>
          <tr>
    
            <td><%= link_to project_donor.project.name, project_donor.project if project_donor.project_id %></td>

            <td><%= link_to project_donor.donor.name, project_donor.donor if project_donor.donor_id %></td>
            <td class="hidden-print actions">
              <div class="btn-group">
                <%= link_to t('views.epp.links.show'), project_donor , :class => 'btn btn-xs btn-default' %>
                <button type="button" class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown">
                  <span class="caret"></span>
                  <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to t('views.epp.links.edit'), edit_project_donor_path(project_donor) %></li>
                  <li><%= link_to t('views.epp.links.destroy'), project_donor, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to t('views.epp.links.new %{model}', :model => t("views.project_donors.project_donor")), new_project_donor_path, :class => 'btn btn-primary btn-lg hidden-print' %>
</div>