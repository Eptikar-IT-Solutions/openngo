<%- title "#{@attachment.name}" %>
<div class="col-lg-12 show">
	<div class="page-header">
		<h1><%= @attachment.name %></h1>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.attachments.name") %></strong></div>


		<div class="col-sm-10"><%= @attachment.try(:name) || 'N/A' %></div>
	</div>

    <div class="row">
		   <iframe src = "/ViewerJS/#..<%= @attachment.file.url %>" width='100%' height='1024' allowfullscreen webkitallowfullscreen></iframe>
    </div>
  </div>
	<div class="buttons">
		<%= link_to t('views.epp.links.edit'), edit_attachment_path(@attachment), :class => 'btn btn-warning' %>
		<%= link_to t('views.epp.links.back'), attachments_path, :class => 'btn btn-default' %>
	</div>
</div>