<%- title t "views.application_layout.project_members" %>
<div class="col-xs-12">

  <div class="page-header">
    <h1><%= t "views.application_layout.project_members" %> <small><%= t("views.epp.Listing of all %{model}", :model => t("views.project_members.project_members")) %></small></h1>
  </div>


  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
              <th><%= t("views.project_members.project_id") %></th>
              <th><%= t("views.project_members.member_id") %></th>
              <th><%= t("views.project_members.member_type") %></th>
              <th class="hidden-print"></th>
        </tr>
      </thead>

      <tbody>
        <% @project_members.each do |project_member| %>
          <tr>
    
            <td><%= link_to project_member.project.name, project_member.project if project_member.project_id %></td>

            <td><%= link_to project_member.member.name, project_member.member if project_member.member_id %></td>


            <td><%= project_member.member_type %></td>
                <td class="hidden-print actions">
              <div class="btn-group">
                <%= link_to t('views.epp.links.show'), project_member , :class => 'btn btn-xs btn-default' %>
                <button type="button" class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown">
                  <span class="caret"></span>
                  <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to t('views.epp.links.edit'), edit_project_member_path(project_member) %></li>
                  <li><%= link_to t('views.epp.links.destroy'), project_member, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to t('views.epp.links.new %{model}', :model => t("views.project_members.project_member")), new_project_member_path, :class => 'btn btn-primary btn-lg hidden-print' %>
</div>