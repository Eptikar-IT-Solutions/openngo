<%- title "#{@project_member.project_id}" %>
<div class="col-lg-12 show">
	<div class="page-header">
		<h1><%= @project_member.project_id %></h1>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.project_members.project_id") %></strong></div>

		<div class="col-sm-10"><%= link_to @project_member.project.name, @project_member.project if @project_member.project_id %></div>
		</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.project_members.member_id") %></strong></div>

		<div class="col-sm-10"><%= link_to @project_member.member.name, @project_member.member if @project_member.member_id %></div>
		</div>

	<div class="buttons">
		<%= link_to t('views.epp.links.edit'), edit_project_member_path(@project_member), :class => 'btn btn-warning' %>
		<%= link_to t('views.epp.links.back'), project_members_path, :class => 'btn btn-default' %>
	</div>
</div>