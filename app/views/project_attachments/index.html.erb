<%- title t "views.application_layout.project_attachments" %>
<div class="col-xs-12">

  <div class="page-header">
    <h1><%= t "views.application_layout.project_attachments" %> <small><%= t("views.epp.Listing of all %{model}", :model => t("views.project_attachments.project_attachments")) %></small></h1>
  </div>


  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
              <th><%= t("views.project_attachments.attachment_id") %></th>
              <th><%= t("views.project_attachments.project_id") %></th>
              <th class="hidden-print"></th>
        </tr>
      </thead>

      <tbody>
        <% @project_attachments.each do |project_attachment| %>
          <tr>
    
            <td><%= link_to project_attachment.file%></td>

            <td><%= link_to project_attachment.project.name, project_attachment.project if project_attachment.project %></td>
            <td class="hidden-print actions">
              <div class="btn-group">
                <%= link_to t('views.epp.links.show'), project_attachment , :class => 'btn btn-xs btn-default' %>
                <button type="button" class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown">
                  <span class="caret"></span>
                  <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to t('views.epp.links.edit'), edit_project_attachment_path(project_attachment) %></li>
                  <li><%= link_to t('views.epp.links.destroy'), project_attachment, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to t('views.epp.links.new %{model}', :model => t("views.project_attachments.project_attachment")), new_project_attachment_path, :class => 'btn btn-primary btn-lg hidden-print' %>
</div>