<%- title "#{@project_attachment.attachment_id}" %>
<div class="col-lg-12 show">
	<div class="page-header">
		<h1><%= @project_attachment.attachment_id %></h1>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.project_attachments.attachment_id") %></strong></div>

		<div class="col-sm-10"><%= link_to @project_attachment.attachment.name, @project_attachment.attachment if @project_attachment.attachment_id %></div>
		</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.project_attachments.project_id") %></strong></div>

		<div class="col-sm-10"><%= link_to @project_attachment.project.name, @project_attachment.project if @project_attachment.project_id %></div>
		</div>


	<div class="buttons">
		<%= link_to t('views.epp.links.edit'), edit_project_attachment_path(@project_attachment), :class => 'btn btn-warning' %>
		<%= link_to t('views.epp.links.back'), project_attachments_path, :class => 'btn btn-default' %>
	</div>
</div>