<%- title "#{@project_attachment.project}" %>
<div class="col-lg-12 show">
	<div class="page-header">
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.project_attachments.file") %></strong></div>

		<div class="col-sm-10"><%= link_to @project_attachment.file_file_name, @project_attachment.file.path %></div>
		</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.project_attachments.project_id") %></strong></div>

		<div class="col-sm-10"><%= link_to @project_attachment.project.name, @project_attachment.project if @project_attachment.project %></div>
		</div>
 
   <div>
   	<iframe src = "/ViewerJS/#..<%= @project_attachment.file.url %>" width='100%' height='1024' allowfullscreen webkitallowfullscreen></iframe>
   </div>

	<div class="buttons">
		<%= link_to t('views.epp.links.edit'), edit_project_attachment_path(@project_attachment), :class => 'btn btn-warning' %>
		<%= link_to t('views.epp.links.back'), project_attachments_path, :class => 'btn btn-default' %>
	</div>
</div>