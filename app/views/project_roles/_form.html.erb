<%= form_for @project_role, :html => {:class => 'form-horizontal'} do |f| %>
  <% if @project_role.errors.any? %>
    <% @project_role.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger"><%= msg %></div>
    <% end %>
  <% end %>
  

      <div class="form-group">
        <%= f.label :role_id, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <div class="input-group">
            <%= f.select :role_id, Role.all.collect {|p| [ p.name, p.id ] }, {}, { :class => 'form-control' } %>
            <span class="input-group-btn">
            <%= link_to raw('<span class="glyphicon glyphicon-plus"></span>'), new_role_path, :class => 'btn btn-default', :target => '_blank' %>
            <%= link_to raw('<span class="glyphicon glyphicon-play"></span>'), roles_path, :class => 'btn btn-default goto' %>
            </span>
          </div>
        </div>
      </div>


      <div class="form-group">
        <%= f.label :project_id, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <div class="input-group">
            <%= f.select :project_id, Project.all.collect {|p| [ p.name, p.id ] }, {}, { :class => 'form-control' } %>
            <span class="input-group-btn">
            <%= link_to raw('<span class="glyphicon glyphicon-plus"></span>'), new_project_path, :class => 'btn btn-default', :target => '_blank' %>
            <%= link_to raw('<span class="glyphicon glyphicon-play"></span>'), projects_path, :class => 'btn btn-default goto' %>
            </span>
          </div>
        </div>
      </div>

     
     <div class="form-group">
        <%= f.label :member_id, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <div class="input-group">
            <%= f.select :member_id, Member.all.collect {|p| [ p.name, p.id ] }, {}, { :class => 'form-control' } %>
            <span class="input-group-btn">
            <%= link_to raw('<span class="glyphicon glyphicon-plus"></span>'), new_member_path, :class => 'btn btn-default', :target => '_blank' %>
            <%= link_to raw('<span class="glyphicon glyphicon-play"></span>'), members_path, :class => 'btn btn-default goto' %>
            </span>
          </div>
        </div>
      </div>



    <div class="form-group">
      <%= f.label :description, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_area :description, :class => 'form-control' %></div>
    </div>

  
  <div class="form-group">
    <label class="col-sm-2 control-label" for="attachment_file"></label>
    <div class="col-sm-10"><button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-floppy-disk"></span> <%= t('views.epp.links.save') %></button></div>
  </div>
      
<% end %>