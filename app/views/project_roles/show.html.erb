<%- title "#{@project_role.role_id}" %>
<div class="col-lg-12 show">
	<div class="page-header">
		<h1><%= @project_role.role_id %></h1>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.project_roles.role_id") %></strong></div>

		<div class="col-sm-10"><%= link_to @project_role.role.name, @project_role.role if @project_role.role_id %></div>
		</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.project_roles.project_id") %></strong></div>

		<div class="col-sm-10"><%= link_to @project_role.project.name, @project_role.project if @project_role.project_id %></div>
		</div>

    	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.project_roles.member_id") %></strong></div>

		<div class="col-sm-10"><%= link_to @project_role.member.name, @project_role.member if @project_role.member_id %></div>
		</div>
	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.project_roles.description") %></strong></div>


		<div class="col-sm-10"><%= @project_role.try(:description) || 'N/A' %></div>
	</div>


	<div class="buttons">
		<%= link_to t('views.epp.links.edit'), edit_project_role_path(@project_role), :class => 'btn btn-warning' %>
		<%= link_to t('views.epp.links.back'), project_roles_path, :class => 'btn btn-default' %>
	</div>
</div>