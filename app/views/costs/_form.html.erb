<%= form_for [@activity, @cost], url: activity_cost_url, :html => {:class => 'form-horizontal'} do |f| %> 
  <% if @cost.errors.any? %>
    <% @cost.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger"><%= msg %></div>
    <% end %>
  <% end %>


  <%= f.hidden_field :activity_id, value: @cost.activity_id%>

  <%= render :partial => "lines/form", :locals => {f: f} %>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="attachment_file"></label>
    <div class="col-sm-10"><button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-floppy-disk"></span> <%= t('views.epp.links.save') %></button></div>
  </div>
      
<% end %>