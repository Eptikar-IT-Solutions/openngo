<%= form_for @organization, :html => {:class => 'form-horizontal'} do |f| %>
  <% if @organization.errors.any? %>
    <% @organization.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger"><%= msg %></div>
    <% end %>
  <% end %>
  



    <div class="form-group">
      <%= f.label :name, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :name, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :website, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :website, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :subdomain, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :subdomain, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :email, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :email, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :phone1, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :phone1, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :phone2, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :phone2, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :fax, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :fax, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :address, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :address, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :description, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_area :description, :class => 'form-control' %></div>
    </div>




      <div class="form-group">
        <%= f.label :active, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <div class="checkbox">
            <label>
              <%= f.check_box :active%> Active
            </label>
          </div>
        </div>
      </div>

  
  <div class="form-group">
    <label class="col-sm-2 control-label" for="attachment_file"></label>
    <div class="col-sm-10"><button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-floppy-disk"></span> <%= t('views.epp.links.save') %></button></div>
  </div>
      
<% end %>