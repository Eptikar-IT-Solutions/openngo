<%= form_for @organization, :html => {:class => 'form-horizontal'} do |f| %>
  <% if @organization.errors.any? %>
    <% @organization.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger"><%= msg %></div>
    <% end %>
  <% end %>
  



    <div class="form-group">
      <%= f.label :name, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :name, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :website, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :website, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :subdomain, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :subdomain, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :email, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :email, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :phone1, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :phone1, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :phone2, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :phone2, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :fax, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :fax, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :address, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_field :address, :class => 'form-control' %></div>
    </div>




    <div class="form-group">
      <%= f.label :description, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.text_area :description, :class => 'form-control' %></div>
    </div>


    <div class="form-group">
      <%= f.label :logo, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10"><%= f.file_field :logo, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div>
        <%= f.label :trello_member_token , :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10"><%= f.text_field :trello_member_token, :class =>'form-control' %></div>
        <small class="col-sm-10"><%= t('views.organizations.instructions')%>
        <a class="btn btn-default" target="_blank" href="https://trello.com/1/connect?key=70f00a63003b8f4b28375ef65ab95ff1&name=OpenNGO&response_type=token&scope=read,write"><%= t('views.organizations.get_token') %></a></small>
      </div>
    </div> 
    

      <div class="form-group">
        <%= f.label :active, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <div class="checkbox">
            <label>
              <%= f.check_box :active%> Active
            </label>
          </div>
        </div>
      </div>

      <div class="page-header">
      <h4><%= t("views.epp.links.translation fields") %></h4>
    </div>
    <%= f.globalize_fields_for other_locale do |ff| %>
      <%= ff.hidden_field :locale, value: other_locale %>
      <div class="form-group">
        <%= ff.label t("views.organizations.name")+t("views.epp.links.in %{lang}", lang: t("views.epp.links.#{other_locale.to_s}")), :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= ff.text_field :name, :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= ff.label t("views.organizations.description")+t("views.epp.links.in %{lang}", lang: t("views.epp.links.#{other_locale.to_s}")), :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= ff.text_area :description, :class => 'form-control' %>
        </div>
      </div>
    <% end %>


  
  <div class="form-group">
    <label class="col-sm-2 control-label" for="attachment_file"></label>
    <div class="col-sm-10"><button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-floppy-disk"></span> <%= t('views.epp.links.save') %></button></div>
  </div>
      
<% end %>