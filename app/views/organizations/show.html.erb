<%- title "#{@organization.name}" %>
<div class="col-lg-12 show">
	<div class="page-header">
		<h1><%= @organization.name %></h1>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.organizations.name") %></strong></div>


		<div class="col-sm-10"><%= @organization.try(:name) || 'N/A' %></div>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.organizations.website") %></strong></div>


		<div class="col-sm-10"><%= @organization.try(:website) || 'N/A' %></div>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.organizations.subdomain") %></strong></div>


		<div class="col-sm-10"><%= @organization.try(:subdomain) || 'N/A' %></div>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.organizations.email") %></strong></div>


		<div class="col-sm-10"><%= @organization.try(:email) || 'N/A' %></div>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.organizations.phone1") %></strong></div>


		<div class="col-sm-10"><%= @organization.try(:phone1) || 'N/A' %></div>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.organizations.phone2") %></strong></div>


		<div class="col-sm-10"><%= @organization.try(:phone2) || 'N/A' %></div>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.organizations.fax") %></strong></div>


		<div class="col-sm-10"><%= @organization.try(:fax) || 'N/A' %></div>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.organizations.address") %></strong></div>


		<div class="col-sm-10"><%= @organization.try(:address) || 'N/A' %></div>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.organizations.description") %></strong></div>


		<div class="col-sm-10"><%= @organization.try(:description) || 'N/A' %></div>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.organizations.active") %></strong></div>


		<div class="col-sm-10"><%= @organization.active ? raw('<span class="glyphicon glyphicon-ok"></span>') : raw('<span class="glyphicon glyphicon-remove"></span>') %></div>
		</div>


	<div class="buttons">
		<%= link_to t('views.epp.links.edit'), edit_organization_path(@organization), :class => 'btn btn-warning' %>
		<%= link_to t('views.epp.links.back'), organizations_path, :class => 'btn btn-default' %>
	</div>
</div>
