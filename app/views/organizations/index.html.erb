<%- title t "views.application_layout.organizations" %>
<div class="col-xs-12">

  <div class="page-header">
    <h1><%= t "views.application_layout.organizations" %> <small><%= t("views.epp.Listing of all %{model}", :model => t("views.organizations.organizations")) %></small></h1>
  </div>


  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
              <th><%= t("views.organizations.name") %></th>
              <th><%= t("views.organizations.website") %></th>
              <th><%= t("views.organizations.subdomain") %></th>
              <th><%= t("views.organizations.active") %></th>
              <th class="hidden-print"></th>
        </tr>
      </thead>

      <tbody>
        <% @organizations.each do |organization| %>
          <tr>
    

            <td><%= organization.name %></td>
    

            <td><%= organization.website %></td>
    

            <td><%= organization.subdomain %></td>
    

            <td><%= organization.active ? raw('<span class="glyphicon glyphicon-ok"></span>') : raw('<span class="glyphicon glyphicon-remove"></span>') %></td>
            <td class="hidden-print actions">
              <div class="btn-group">
                <%= link_to t('views.epp.links.show'), organization , :class => 'btn btn-xs btn-default' %>
                <button type="button" class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown">
                  <span class="caret"></span>
                  <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to t('views.epp.links.edit'), edit_organization_path(organization) %></li>
                  <li><%= link_to t('views.epp.links.destroy'), organization, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to t('views.epp.links.new %{model}', :model => t("views.organizations.organization")), new_organization_path, :class => 'btn btn-primary btn-lg hidden-print' %>
</div>