<%- title "#{@project_location.project_id}" %>
<div class="col-lg-12 show">
	<div class="page-header">
		<h1><%= @project_location.project_id %></h1>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.project_locations.project_id") %></strong></div>

		<div class="col-sm-10"><%= link_to @project_location.project.name, @project_location.project if @project_location.project_id %></div>
		</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.project_locations.location_id") %></strong></div>

		<div class="col-sm-10"><%= link_to @project_location.location.name, @project_location.location if @project_location.location_id %></div>
		</div>


	<div class="buttons">
		<%= link_to t('views.epp.links.edit'), edit_project_location_path(@project_location), :class => 'btn btn-warning' %>
		<%= link_to t('views.epp.links.back'), project_locations_path, :class => 'btn btn-default' %>
	</div>
</div>