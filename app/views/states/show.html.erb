<%- title "#{@state.name}" %>
<div class="col-lg-12 show">
	<div class="page-header">
		<h1><%= @state.name %></h1>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.states.name") %></strong></div>


		<div class="col-sm-10"><%= @state.try(:name) || 'N/A' %></div>
	</div>


	<div class="buttons">
		<%= link_to t('views.epp.links.edit'), edit_state_path(@state), :class => 'btn btn-warning' %>
		<%= link_to t('views.epp.links.back'), states_path, :class => 'btn btn-default' %>
	</div>
</div>