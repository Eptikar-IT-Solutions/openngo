<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_user_session_path %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <br /><small><%= link_to "Forgot your password?", new_password_path(resource_name), { style: "display: block; text-align: center" } %></small>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <br /><br />
  <p class="login-box-msg">You could also Sign in with: </p>
  <div style="display: block-inline; text-align: center">
    <%- resource_class.omniauth_providers.each do |provider| %>

      <%= link_to "", omniauth_authorize_path(resource_name, provider), { class: "fa fa-#{provider.to_s.singularize} fa-3x" } %>
    <% end -%>
  </div>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div style="display: block-inline; text-align: center">
      <br /><small>Don't have an account?</small>
      <%= link_to " Sign Up", new_registration_path(resource_name) %>
    </div>
<% end -%>

