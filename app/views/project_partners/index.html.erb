<%- title t "views.application_layout.project_partners" %>
<div class="col-xs-12">

  <div class="page-header">
    <h1><%= t "views.application_layout.project_partners" %> <small><%= t("views.epp.Listing of all %{model}", :model => t("views.project_partners.project_partners")) %></small></h1>
  </div>


  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
              <th><%= t("views.project_partners.project_id") %></th>
              <th><%= t("views.project_partners.partner_id") %></th>
              <th class="hidden-print"></th>
        </tr>
      </thead>

      <tbody>
        <% @project_partners.each do |project_partner| %>
          <tr>
    
            <td><%= link_to project_partner.project.name, project_partner.project if project_partner.project_id %></td>

            <td><%= link_to project_partner.partner.name, project_partner.partner if project_partner.partner_id %></td>
            <td class="hidden-print actions">
              <div class="btn-group">
                <%= link_to t('views.epp.links.show'), project_partner , :class => 'btn btn-xs btn-default' %>
                <button type="button" class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown">
                  <span class="caret"></span>
                  <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to t('views.epp.links.edit'), edit_project_partner_path(project_partner) %></li>
                  <li><%= link_to t('views.epp.links.destroy'), project_partner, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to t('views.epp.links.new %{model}', :model => t("views.project_partners.project_partner")), new_project_partner_path, :class => 'btn btn-primary btn-lg hidden-print' %>
</div>