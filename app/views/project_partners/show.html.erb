<%- title "#{@project_partner.project_id}" %>
<div class="col-lg-12 show">
	<div class="page-header">
		<h1><%= @project_partner.project_id %></h1>
	</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.project_partners.project_id") %></strong></div>

		<div class="col-sm-10"><%= link_to @project_partner.project.name, @project_partner.project if @project_partner.project_id %></div>
		</div>

	<div class="row">
		<div class="col-sm-2"><strong><%= t("views.project_partners.partner_id") %></strong></div>

		<div class="col-sm-10"><%= link_to @project_partner.partner.name, @project_partner.partner if @project_partner.partner_id %></div>
		</div>


	<div class="buttons">
		<%= link_to t('views.epp.links.edit'), edit_project_partner_path(@project_partner), :class => 'btn btn-warning' %>
		<%= link_to t('views.epp.links.back'), project_partners_path, :class => 'btn btn-default' %>
	</div>
</div>