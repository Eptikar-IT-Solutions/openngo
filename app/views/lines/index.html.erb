<%- title t "views.application_layout.lines" %>
<div class="col-xs-12">

  <div class="page-header">
    <h1><%= t "views.application_layout.lines" %> <small><%= t("views.epp.Listing of all %{model}", :model => t("views.lines.lines")) %></small></h1>
  </div>


  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
              <th><%= t("views.lines.name") %></th>
              <th><%= t("views.lines.quantity") %></th>
              <th><%= t("views.lines.cost") %></th>
              <th class="hidden-print"></th>
        </tr>
      </thead>

      <tbody>
        <% @lines.each do |line| %>
          <tr>
    

            <td><%= line.name %></td>
    

            <td><%= line.quantity %></td>
    

            <td><%= line.price %></td>
                <td class="hidden-print actions">
              <div class="btn-group">
                <%= link_to t('views.epp.links.show'), line , :class => 'btn btn-xs btn-default' %>
                <button type="button" class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown">
                  <span class="caret"></span>
                  <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to t('views.epp.links.edit'), edit_line_path(line) %></li>
                  <li><%= link_to t('views.epp.links.destroy'), line, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to t('views.epp.links.new %{model}', :model => t("views.lines.line")), new_line_path, :class => 'btn btn-primary btn-lg hidden-print' %>
</div>